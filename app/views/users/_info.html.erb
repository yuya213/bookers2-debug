<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th>
      <a href= <%= user_followings_path(user) %> >
      <%= user.followings.count %>
      </a>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th>
      <a href="<%= user_followers_path(user) %>">
      <%= user.followers.count %>
     </a>
    </th>
  </tr>
  <tr>
　<% unless current_user == user %>
          <% if current_user.following?(user) %>
          <th><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: 'btn btn-danger' %></th>
          <% else %>
           <th><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: 'btn btn-success' %></th>
          <% end %>
      <% end %>
  </tr>
  
</table>
　
　

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
