<div class='col-md'>
  <h3>Follower Users</h3>
     <% if @users.count > 0 %>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
            <th></th>
            <th colspan="4"></th>
        </tr>
      </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
            <td><%= image_tag user.get_profile_image, size:"100x100" %></td>
              <td><%= user.name %></td>
              <td>フォロー数: <%= user.followings.count %></td>
              <td>フォロワー数: <%= user.followers.count %></td>
              <td><%= link_to "show", user_path(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </tr>
  </table>
    <% else %>
    <span>ユーザーはいません</span>
  <% end %>
</div>