   <% book.book_comments.each do |book_comment| %>
       <p>
        <%= image_tag book_comment.user.get_profile_image, size:"50x50" %>
        <%= book_comment.comment %>
        <% if book_comment.user == current_user %>
        <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: {"turbolinks" => false} , class: "btn btn-sm btn-danger"  %>
        <% end %>
        <br>
        <%= link_to(book.user) do %>
        <%= book.user.name %>
        <% end %>
       </p>
      <% end %>